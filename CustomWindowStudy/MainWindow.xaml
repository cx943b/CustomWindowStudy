<Window x:Class="CustomWindowStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomWindowStudy"
        xmlns:localCtrl="clr-namespace:CustomWindowStudy.Controls"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="480">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome GlassFrameThickness="1" />
    </shell:WindowChrome.WindowChrome>

    <Border BorderThickness="1" BorderBrush="{StaticResource ControlBorderBrush}">
        <DockPanel Background="#FFAAAAAA">
            <localCtrl:WindowTitleBar />
        </DockPanel>
    </Border>
</Window>
