<Window x:Class="CustomWindowStudy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomWindowStudy"
        Left="1100" Top="300"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="480" Background="Gray">
    <Window.Resources>
        <Color x:Key="GrayColorStep170">#FFAA</Color>
    </Window.Resources>
    
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0" ResizeBorderThickness="0" GlassFrameThickness="0" CornerRadius="0"/>
    </shell:WindowChrome.WindowChrome>
    
    <Grid Visibility="Visible">
        <Rectangle Fill="#FFAAAAAA" WindowChrome.IsHitTestVisibleInChrome="True"/>
        <Button x:Name="btnMax" Content="btnMax" Width="100" Height="64" Margin="0 0 100 0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="btnClose" Content="btnClose" Width="100" Height="64" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Button_Click"/>
        <!--<local:TextRegionTestControl Width="300" Height="100"/>-->
    </Grid>
</Window>
