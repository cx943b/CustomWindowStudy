<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:localCtrl="clr-namespace:CustomWindowStudy.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/CustomWindowStudy;component/Themes/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type localCtrl:WindowTitleBar}">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type localCtrl:WindowTitleBar}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="42"/>
                            <ColumnDefinition Width="42"/>
                            <ColumnDefinition Width="42"/>
                        </Grid.ColumnDefinitions>
                        
                        <Rectangle x:Name="PART_SysIcon" Fill="CornflowerBlue" Grid.Column="0" Width="36"/>
                        <Rectangle Fill="HotPink" Grid.Column="1" />
                        <localCtrl:WindowTitleBarButton Grid.Column="2" Width="42" Content="x" ButtonFlag="Close"/>
                        <localCtrl:WindowTitleBarButton Grid.Column="3" Width="42" Content="x" ButtonFlag="Maximize"/>
                        <localCtrl:WindowTitleBarButton Grid.Column="4" Width="42" Content="x" ButtonFlag="Minimize"/>

                        
                        
                    </Grid>
                    <!--<DockPanel LastChildFill="True">
                        <localCtrl:WindowTitleBarButton DockPanel.Dock="Right" Width="42" Content="x" ButtonFlag="Close"/>
                        <localCtrl:WindowTitleBarButton DockPanel.Dock="Right" Width="42" Content="x" ButtonFlag="Maximize"/>
                        <localCtrl:WindowTitleBarButton DockPanel.Dock="Right" Width="42" Content="x" ButtonFlag="Minimize"/>
                        
                        <Rectangle Fill="CornflowerBlue" DockPanel.Dock="Left" Width="36"/>
                        <Rectangle Fill="HotPink"/>
                    </DockPanel>-->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>