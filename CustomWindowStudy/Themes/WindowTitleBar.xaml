<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:localCtrl="clr-namespace:CustomWindowStudy.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/CustomWindowStudy;component/Themes/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type localCtrl:WindowTitleBar}">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Height" Value="28"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type localCtrl:WindowTitleBar}">
                    <DockPanel LastChildFill="True">
                        <localCtrl:WindowTitleBarButton x:Name="PART_CloseButton" Width="42" Content="x" ButtonFlag="Close" DockPanel.Dock="Right" />
                        <localCtrl:WindowTitleBarButton x:Name="PART_MaximizeButton" Width="42" Content="x" ButtonFlag="Maximize" DockPanel.Dock="Right"/>
                        <localCtrl:WindowTitleBarButton x:Name="PART_MinimizeButton" Width="42" Content="x" ButtonFlag="Minimize" DockPanel.Dock="Right"/>

                        <Rectangle x:Name="PART_SysIcon" Fill="CornflowerBlue" Width="36" DockPanel.Dock="Left"/>
                        <Rectangle x:Name="PART_TitleArea" Fill="HotPink" />
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>